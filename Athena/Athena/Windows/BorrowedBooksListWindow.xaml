<controls:AdonisWindow x:Class="Athena.Windows.BorrowedBooksListWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:uc="clr-namespace:Athena"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:Athena"
                       xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                       mc:Ignorable="d"
                       Title="Wypożyczone książki" Height="580" Width="600">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height = "*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ListView Grid.ColumnSpan="2" Grid.Row="1" Margin="10" x:Name="BookList" Grid.Column="0">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Wypożycz"/>
                        <MenuItem Header="Edytuj"/>
                        <MenuItem Header="Usuń"/>
                    </ContextMenu>
                </ListView.ContextMenu>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tytuł" Width="Auto" />
                        <GridViewColumn Header="Autor" Width="Auto" />
                        <GridViewColumn Header="Seria" Width="Auto" />
                        <GridViewColumn Header="Język" Width="Auto" />
                        <GridViewColumn Header="Wydawca" Width="Auto" />
                        <GridViewColumn Header="Rok wydania" Width="Auto" />
                        <GridViewColumn Header="Miejce Składowania" Width="Auto" />
                        <GridViewColumn Header="ISBN" Width="Auto" />
                        <GridViewColumn Header="Wypożyczono" Width="Auto" />
                    </GridView>
                </ListView.View>
                <!--dodać przycisk zwróc-->
            </ListView>
        </Grid>

    </Border>

</controls:AdonisWindow>