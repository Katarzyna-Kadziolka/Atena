<Window x:Class="Athena.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Athena"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Border Padding="10">
        <StackPanel>
            <!-- Book Info-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Text="Dodaj książkę" HorizontalAlignment="Center" FontSize="20" Grid.Row="0"
                           Grid.ColumnSpan="2" Padding="10" />
                <TextBlock Text="Tytuł:" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0 10 0 0" />
                <TextBox Grid.Row="1" Grid.Column="1" Margin="5 10 10 0" Height="22" />
            </Grid>

            <Grid Margin="5 10 10 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Autor" FontWeight="Bold" HorizontalAlignment="Left" Grid.Column="0" Margin="0 10"/>
                <Button Content="➕" HorizontalAlignment="Right" FontSize="11" Grid.Column="1" Margin="0 10" Width="20" Height="20"/>
                <TextBlock Text="Kategoria" FontWeight="Bold" HorizontalAlignment="Left" Grid.Column="2" Margin="20 10"/>
                <Button Content="➕" FontSize="11" HorizontalAlignment="Right" Grid.Column="3" Margin="0 10" Width="20" Height="20"/>
                
            </Grid>

            <Grid Margin="33 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Imię:" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0"/>
                <TextBox  Grid.Row="0" Grid.Column="1" Margin="0 0 18 0 " Height="22"/>
                <ComboBox IsEditable="True" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Margin="0 0 10 0 " Height="22">
                    <ComboBoxItem>Fantasy</ComboBoxItem>
                    <ComboBoxItem>Kryminał</ComboBoxItem>
                    <ComboBoxItem>Młodzieżowa</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Nazwisko:" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" Margin="0 7 0 0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0 7 18 0" Height="21"/>
            </Grid>

            <Grid Margin="5 10 0 0">
                <TextBlock Text="Seria" FontWeight="Bold"/>
            </Grid>

            <Grid Margin="33 7 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nazwa:"></TextBlock>
                <ComboBox IsEditable="True"  Grid.Column="1"  Margin="0 0 19 0" >
                    <ComboBoxItem>Harry Potter</ComboBoxItem>
                    <ComboBoxItem>Wiedźmin</ComboBoxItem>
                    <ComboBoxItem>50 twarzy Greya</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="Nr tomu:" Grid.Column="2"/>
                <TextBox HorizontalAlignment="Left" Width="30" Grid.Column="3"/>
            </Grid>

            <Grid Margin="5 10 10 0 ">
                <TextBlock Text="Wydanie" FontWeight="Bold"></TextBlock>
            </Grid>





        </StackPanel>
    </Border>
</Window>