<controls:AdonisWindow x:Class="Athena.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:uc="clr-namespace:Athena"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:Athena"
                       xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                       mc:Ignorable="d"
                       Title="Athena" Height="580" Width="600">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>


    <Border Padding="10"><Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        <ListView  Grid.Row="0" Margin="10" Name="bookList">
                <ListViewItem>Uczeń Skrytobójcy</ListViewItem>
                <ListViewItem>Harry Potter i Kamień Filozoficzny</ListViewItem>
                <ListViewItem>Pan Lodowego Ogrodu</ListViewItem>
                <ListViewItem>Uczta Dusz</ListViewItem>
                <ListViewItem>W Pogoni Za Smokiem</ListViewItem>
                <ListViewItem>Harry Potter i Konnata Tajemnic</ListViewItem>
                <ListViewItem>Uczennica Maga</ListViewItem>
                <ListViewItem>Księga Jesiennych Demonów</ListViewItem>
                <ListViewItem>Biały Smok</ListViewItem>
                <ListViewItem>Jeżdżcy Smoków</ListViewItem>
                <ListViewItem>W pogoni za smokiem</ListViewItem>
                <ListViewItem>Śpiew smoków</ListViewItem>
                <ListViewItem>Harry Potter i Zakon Feniksa</ListViewItem>
                <ListViewItem>Harry Potter i Czara Ognia</ListViewItem>
                <ListViewItem>Smocze werble</ListViewItem>
                <ListViewItem>Mitologia Nordycka</ListViewItem>
                <ListViewItem>Koralina</ListViewItem>
                <ListViewItem>Dziedzic Zaklinaczy</ListViewItem>
                <ListViewItem>Dziedzic Smoka</ListViewItem>
                <ListViewItem>Dziedzic Wojowników</ListViewItem>
                <ListViewItem>Dziedzic Czarodziejów</ListViewItem>
                <ListViewItem>Renegaci z Pern</ListViewItem>
                <ListViewItem>Narodziny Smoków</ListViewItem>
                <ListViewItem>Niebiosa Pern</ListViewItem>
                <ListViewItem>Smocze Oko</ListViewItem>

                <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tytuł" Width="Auto"/>
                    <GridViewColumn Header="Autor" Width="Auto" />
                    <GridViewColumn Header="Seria" Width="Auto" />
                    <GridViewColumn Header="Język" Width="Auto" />
                    <GridViewColumn Header="Wydawca" Width="Auto" />
                    <GridViewColumn Header="Rok wydania" Width="Auto" />
                    <GridViewColumn Header="Miejce Składowania" Width="Auto" />
                    <GridViewColumn Header="ISBN" Width="Auto"  />
                    <GridViewColumn Header="Status" Width="Auto"/>
                    </GridView>
            </ListView.View>
        </ListView>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Margin="10 5 5 10" Content="Dodaj książkę" Grid.Column="0"/>
            <Button Margin="5 5 5 10" Content="Edytuj ksiażkę" Grid.Column="1"/>
            <Button Margin="5 5 10 10" Content="Usuń ksiażkę" Grid.Column="2" />
        </Grid>
    </Grid>
    </Border>

</controls:AdonisWindow>