<controls:AdonisWindow x:Class="Athena.MainWindow"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:uc="clr-namespace:Athena"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:local="clr-namespace:Athena"
                       xmlns:controls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
                       mc:Ignorable="d"
                       Title="Athena" Height="580" Width="600">

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}" />
    </Window.Style>

    <Border Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            
        <ListView  Grid.Row="0" Margin="10" Name="bookList">
                <ListView.View>
                <GridView>
                        <GridViewColumn Header="Tytuł" Width="Auto" DisplayMemberBinding="{Binding Title}"/>
                        <GridViewColumn Header="Autor" Width="Auto" DisplayMemberBinding="{Binding Author}"/>
                        <GridViewColumn Header="Seria" Width="Auto" DisplayMemberBinding="{Binding Series}"/>
                        <GridViewColumn Header="Język" Width="Auto" DisplayMemberBinding="{Binding Language}"/>
                        <GridViewColumn Header="Wydawca" Width="Auto" DisplayMemberBinding="{Binding Publisher}"/>
                        <GridViewColumn Header="Rok wydania" Width="Auto" DisplayMemberBinding="{Binding PublishmentYear}"/>
                        <GridViewColumn Header="Miejce Składowania" Width="Auto" DisplayMemberBinding="{Binding StoragePlaceName}"/>
                        <GridViewColumn Header="ISBN" Width="Auto" DisplayMemberBinding="{Binding ISBN}"/>
                        <GridViewColumn Header="Status" Width="Auto" DisplayMemberBinding="{Binding Status}"/>
                </GridView>
                </ListView.View>
            
        </ListView>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name ="DodajKsiążkę" Click="Click_Dodaj_Książkę"  Margin="10 5 5 10" Content="Dodaj książkę" Grid.Column="0"/>
                <Button x:Name ="EdytujKsiążkę" Click="Click_Edytuj_Książkę"  Margin="5 5 5 10" Content="Edytuj ksiażkę" Grid.Column="1"/>
                <Button Margin="5 5 10 10" Content="Usuń ksiażkę" Grid.Column="2" />
            </Grid>
        </Grid>
    </Border>

</controls:AdonisWindow>